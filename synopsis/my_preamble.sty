%% Create enumerated list for tasks
\usepackage{enumitem}
\newlist{tasks}{enumerate}{1}
\setlist[tasks]{
    label=\arabic*.,
    align=left,
    left=0pt .. 15pt,
    itemsep=8pt,
    topsep=0pt,
}

\newlist{subtasks}{enumerate}{1}
\setlist[subtasks]{
    label=(\alph*),
    align=left,
    left=0pt .. 18pt,
    itemsep=2pt,
    topsep=2pt,
}

\newlist{subsubtasks}{enumerate}{1}
\setlist[subsubtasks]{
    label=-,
    align=left,
    left=-10pt .. 0pt,
    itemsep=2pt,
    topsep=2pt,
}

